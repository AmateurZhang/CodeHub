            <AppBarButton x:Name="AppBarMyOrganizations"
                          HorizontalAlignment="Center"
                          Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                          Label="Organizations"
                          Tapped="AppBarMyOrganizations_Tapped">

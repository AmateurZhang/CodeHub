<Page x:Class="CodeHub.Views.IssueDetailView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:converters="using:CodeHub.Converters"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="using:Microsoft.Xaml.Interactivity"
      xmlns:local="using:CodeHub.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:octo="using:Octokit"
      mc:Ignorable="d">
    <Page.Resources>
        <converters:TimeAgoConverter x:Key="TimeAgoConverter" x:Name="TimeAgoConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" x:Name="BooleanToVisibilityConverter" />
        <converters:ObjectToStringConverter x:Key="ObjectToStringConverter" x:Name="ObjectToStringConverter" />
    </Page.Resources>
    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DetailGrid.(Grid.Row)" Value="0" />
                        <Setter Target="DetailGrid.(Grid.Column)" Value="0" />
                        <Setter Target="DetailGrid.(Grid.RowSpan)" Value="1" />
                        <Setter Target="DetailGrid.(Grid.ColumnSpan)" Value="2" />
                        <Setter Target="CommentsGrid.(Grid.Row)" Value="1" />
                        <Setter Target="CommentsGrid.(Grid.Column)" Value="0" />
                        <Setter Target="CommentsGrid.(Grid.ColumnSpan)" Value="2" />
                        <Setter Target="CommentsGrid.(Grid.RowSpan)" Value="1" />

                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Normal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DetailGrid.(Grid.Row)" Value="0" />
                        <Setter Target="DetailGrid.(Grid.Column)" Value="0" />
                        <Setter Target="DetailGrid.(Grid.RowSpan)" Value="2" />
                        <Setter Target="CommentsGrid.(Grid.Row)" Value="0" />
                        <Setter Target="CommentsGrid.(Grid.Column)" Value="1" />
                        <Setter Target="CommentsGrid.(Grid.RowSpan)" Value="2" />

                    </VisualState.Setters>

                </VisualState>
                <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DetailGrid.(Grid.Row)" Value="0" />
                        <Setter Target="DetailGrid.(Grid.Column)" Value="0" />
                        <Setter Target="DetailGrid.(Grid.RowSpan)" Value="2" />
                        <Setter Target="CommentsGrid.(Grid.Row)" Value="0" />
                        <Setter Target="CommentsGrid.(Grid.Column)" Value="1" />
                        <Setter Target="CommentsGrid.(Grid.RowSpan)" Value="2" />

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <RelativePanel x:Name="DetailGrid">
            <TextBlock x:Name="TitleBlock"
                       Margin="4,8,0,4"
                       FontSize="16"
                       FontWeight="SemiLight"
                       Foreground="{StaticResource AppPrimaryColorBrush}"
                       RelativePanel.AlignTopWithPanel="True"
                       RelativePanel.RightOf="NumberBlock"
                       Text="{x:Bind ViewModel.Issue.Title, Mode=OneWay}"
                       TextWrapping="Wrap" />
            <TextBlock x:Name="numbersymbol"
                       Margin="8,8,0,4"
                       FontSize="18"
                       FontWeight="Light"
                       Foreground="Gray"
                       Text="#" />
            <TextBlock x:Name="NumberBlock"
                       Margin="0,8,0,4"
                       FontSize="18"
                       FontWeight="Light"
                       Foreground="Gray"
                       RelativePanel.AlignTopWithPanel="True"
                       RelativePanel.RightOf="numbersymbol"
                       Text="{x:Bind ViewModel.Issue.Number, Mode=OneWay}" />

            <StackPanel x:Name="UserBlock"
                        Orientation="Horizontal"
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.Below="statePanel">
                <TextBlock Margin="8,0,3,0"
                           VerticalAlignment="Center"
                           FontSize="13"
                           FontWeight="SemiLight"
                           Foreground="Gray"
                           Text="opened by" />

                <HyperlinkButton Margin="0,0,3,0"
                                 Command="{x:Bind ViewModel.UserTapped}"
                                 Content="{x:Bind ViewModel.Issue.User.Login, Mode=OneWay}">
                    <HyperlinkButton.ContentTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="Gray"
                                       Text="{Binding}" />
                        </DataTemplate>
                    </HyperlinkButton.ContentTemplate>
                </HyperlinkButton>

                <TextBlock Margin="0,0,3,0"
                           VerticalAlignment="Center"
                           FontSize="13"
                           FontWeight="SemiLight"
                           Foreground="Gray"
                           Text="{x:Bind ViewModel.Issue.UpdatedAt, Converter={StaticResource TimeAgoConverter}, Mode=OneWay}" />
            </StackPanel>

            <StackPanel x:Name="statePanel"
                        Margin="8,0,0,0"
                        Padding="6"
                        Orientation="Horizontal"
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.Below="TitleBlock">
                <i:Interaction.Behaviors>
                    <core:DataTriggerBehavior Binding="{x:Bind ViewModel.Issue.State, Mode=OneWay, Converter={StaticResource ObjectToStringConverter}}" Value="Open">
                        <core:ChangePropertyAction PropertyName="Background" Value="#2CBE4E" />
                    </core:DataTriggerBehavior>
                    <core:DataTriggerBehavior Binding="{x:Bind ViewModel.Issue.State, Mode=OneWay, Converter={StaticResource ObjectToStringConverter}}" Value="Closed">
                        <core:ChangePropertyAction PropertyName="Background" Value="#CB2431" />
                    </core:DataTriggerBehavior>
                </i:Interaction.Behaviors>
                <Path Margin="0,0,4,0" Fill="White">
                    <i:Interaction.Behaviors>
                        <core:DataTriggerBehavior Binding="{x:Bind ViewModel.IsPull, Mode=OneWay}" Value="True">
                            <core:ChangePropertyAction PropertyName="Data" Value="M11 11.28V5c-.03-.78-.34-1.47-.94-2.06C9.46 2.35 8.78 2.03 8 2H7V0L4 3l3 3V4h1c.27.02.48.11.69.31.21.2.3.42.31.69v6.28A1.993 1.993 0 0 0 10 15a1.993 1.993 0 0 0 1-3.72zm-1 2.92c-.66 0-1.2-.55-1.2-1.2 0-.65.55-1.2 1.2-1.2.65 0 1.2.55 1.2 1.2 0 .65-.55 1.2-1.2 1.2zM4 3c0-1.11-.89-2-2-2a1.993 1.993 0 0 0-1 3.72v6.56A1.993 1.993 0 0 0 2 15a1.993 1.993 0 0 0 1-3.72V4.72c.59-.34 1-.98 1-1.72zm-.8 10c0 .66-.55 1.2-1.2 1.2-.65 0-1.2-.55-1.2-1.2 0-.65.55-1.2 1.2-1.2.65 0 1.2.55 1.2 1.2zM2 4.2C1.34 4.2.8 3.65.8 3c0-.65.55-1.2 1.2-1.2.65 0 1.2.55 1.2 1.2 0 .65-.55 1.2-1.2 1.2z" />
                        </core:DataTriggerBehavior>
                        <core:DataTriggerBehavior Binding="{x:Bind ViewModel.IsPull, Mode=OneWay}" Value="False">
                            <core:ChangePropertyAction PropertyName="Data" Value="M7 2.3c3.14 0 5.7 2.56 5.7 5.7s-2.56 5.7-5.7 5.7A5.71 5.71 0 0 1 1.3 8c0-3.14 2.56-5.7 5.7-5.7zM7 1C3.14 1 0 4.14 0 8s3.14 7 7 7 7-3.14 7-7-3.14-7-7-7zm1 3H6v5h2V4zm0 6H6v2h2v-2z" />
                        </core:DataTriggerBehavior>
                    </i:Interaction.Behaviors>
                </Path>
                <TextBlock FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Text="{x:Bind ViewModel.Issue.State, Mode=OneWay}" />
            </StackPanel>


            <StackPanel x:Name="assigneePanel"
                        Margin="8,0,0,0"
                        Orientation="Horizontal"
                        RelativePanel.Below="statePanel"
                        RelativePanel.RightOf="UserBlock">
                <Viewbox MaxWidth="15"
                         MaxHeight="15"
                         Margin="0,0,3,0">
                    <SymbolIcon Foreground="Gray" Symbol="Contact" />
                </Viewbox>
                <TextBlock VerticalAlignment="Center"
                           FontSize="13"
                           Foreground="Gray"
                           Text="{x:Bind ViewModel.Issue.Assignee.Login, TargetNullValue='unassigned', FallbackValue='unassigned', Mode=OneWay}"
                           TextAlignment="Left" />
            </StackPanel>

            <ScrollViewer Margin="4,8,4,8"
                          HorizontalScrollBarVisibility="Hidden"
                          HorizontalScrollMode="Disabled"
                          RelativePanel.AlignLeftWithPanel="True"
                          RelativePanel.AlignRightWithPanel="True"
                          RelativePanel.Below="assigneePanel"
                          VerticalScrollBarVisibility="Auto"
                          VerticalScrollMode="Enabled">
                <controls:MarkdownTextBlock FontSize="13"
                                            ImageStretch="Fill"
                                            Text="{x:Bind ViewModel.Issue.Body, Mode=OneWay}"
                                            TextWrapping="Wrap" />
            </ScrollViewer>
        </RelativePanel>
        <Grid x:Name="CommentsGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                            Margin="10 5 0 5"
                            Orientation="Horizontal">
                <TextBlock Margin="0 0 5 0"
                               FontSize="17"
                               FontWeight="SemiLight"
                               Foreground="Gray"
                               Text="Comments" />
                <TextBlock FontSize="17"
                               FontWeight="SemiLight"
                               Foreground="{StaticResource AppPrimaryColorBrush}"
                               Text="{x:Bind ViewModel.Issue.Comments, Mode=OneWay}" />
            </StackPanel>

            <ListView x:Name="commentsListView"
                          Grid.Row="1"
                          IsItemClickEnabled="True"
                          ItemClick="{x:Bind ViewModel.CommentTapped}"
                          ItemsSource="{x:Bind ViewModel.Comments, Mode=OneWay}"
                          ScrollViewer.HorizontalScrollMode="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollMode="Enabled">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="octo:IssueComment">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0 0 3 0" Orientation="Vertical">
                                <Grid>
                                    <Border Width="23"
                                                Height="23"
                                                Margin="0 0 10 0"
                                                CornerRadius="8,8,8,8">
                                        <Border.Background>
                                            <ImageBrush ImageSource="/Assets/Images/placeholder.jpg" />
                                        </Border.Background>
                                    </Border>
                                    <Border Width="23"
                                                Height="23"
                                                Margin="0 0 10 0"
                                                CornerRadius="8,8,8,8">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{x:Bind User.AvatarUrl, Mode=OneWay}" />
                                        </Border.Background>
                                    </Border>
                                </Grid>

                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Margin="0 0 0 5"
                                               FontSize="12"
                                               Foreground="Gray"
                                               Text="{x:Bind User.Login, Mode=OneWay}" />
                                <TextBlock VerticalAlignment="Center"
                                               FontSize="13"
                                               MaxLines="3"
                                               Text="{x:Bind Body, Mode=OneWay}"
                                               TextTrimming="CharacterEllipsis" />
                                <TextBlock Margin="0 5 0 5"
                                               FontSize="12"
                                               Foreground="Gray"
                                               Text="{x:Bind UpdatedAt, Converter={StaticResource TimeAgoConverter}, Mode=OneWay}" />
                            </StackPanel>

                        </StackPanel>
                    </DataTemplate>

                </ListView.ItemTemplate>
            </ListView>
            <ProgressRing Grid.Row="1"
                              Width="20"
                              Height="20"
                              HorizontalAlignment="Center"
                              IsActive="{x:Bind ViewModel.isLoading, Mode=OneWay}" />
        </Grid>
    </Grid>
</Page>

<Page
    x:Class="CodeHub.Views.SourceCodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeHub.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:octo="using:Octokit"
    xmlns:converters="using:CodeHub.Converters"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="RepoDetailTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#525252"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <converters:FileTypeToSymbolConverter x:Key="FileTypeToSymbolConverter" x:Name="FileTypeToSymbolConverter"/>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Background="{ThemeResource SystemChromeLowColor}">

            <HyperlinkButton Content="{x:Bind ViewModel.Repository.FullName,Mode=OneWay}"
                             Command="{x:Bind ViewModel.RepoDetailNavigateCommand}"
                             HorizontalAlignment="Center"
                             Margin="0 12 0 12">
                <HyperlinkButton.ContentTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   FontSize="17"
                                   TextWrapping="Wrap"
                                   Style="{StaticResource RepoNameTextBlockStyle}"/>
                    </DataTemplate>
                </HyperlinkButton.ContentTemplate>
            </HyperlinkButton>

        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="Branch "
                       FontSize="13"
                       VerticalAlignment="Center"
                       Foreground="Gray"/>
            <ComboBox PlaceholderText="{x:Bind ViewModel.SelectedBranch,Mode=OneWay}"
                      ItemsSource="{x:Bind ViewModel.Branches,Mode=OneWay}"
                      Margin="5 0 0 0"
                      FontSize="13"
                      SelectionChanged="{x:Bind ViewModel.BranchChanged}"
                      SelectedItem="{x:Bind ViewModel.SelectedBranch,Mode=OneWay}"
                      />

        </StackPanel>
        <Frame x:Name="ContentFrame" Grid.Row="2" Grid.RowSpan="2">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition>
                        <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                            <DrillInNavigationTransitionInfo/>
                        </NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    </NavigationThemeTransition>
                </TransitionCollection>
            </Frame.ContentTransitions>
            <ListView x:Name="ContentListView"
                      IsItemClickEnabled="True"
                      SelectionMode="Single"
                      ItemClick="{x:Bind ViewModel.RepoContentDrillNavigate}"
                      ItemsSource="{x:Bind ViewModel.Content,Mode=OneWay}">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="octo:RepositoryContent">
                        <StackPanel Orientation="Horizontal">
                            <Viewbox MaxHeight="20"
                                 MaxWidth="20"
                                 Margin="0 0 5 0">
                                <SymbolIcon
                                    Foreground="#808281"
                                    Symbol="{x:Bind Converter={StaticResource FileTypeToSymbolConverter},Mode=OneWay}" />
                            </Viewbox>
                            <TextBlock Text="{x:Bind Name}" Margin="0 0 50 0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>

        <ProgressRing Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="40" Height="40"
                      IsActive="{x:Bind ViewModel.isLoading,Mode=OneWay}"/>

        <Button x:Name="ScrollUpButton"
                    Background="Transparent"
                    Grid.Row="4"
                    Margin="0 0 30 25"
                    Style="{StaticResource EmptyButtonStyle}"
                    HorizontalAlignment="Right"
                    Click="ScrollUpButton_Click">

            <Border CornerRadius="25" 
                        Padding="15"
                        Background="#689F38" 
                        BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Viewbox MaxHeight="21"
                         MaxWidth="21">
                    <SymbolIcon Symbol="Up" Foreground="White"/>
                </Viewbox>
            </Border>
        </Button>
    </Grid>
</Page>
